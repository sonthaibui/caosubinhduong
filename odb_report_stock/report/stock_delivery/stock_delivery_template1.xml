<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="stock_delivery_template_1" name="Template Delivery 1">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <div class="header">
                <div class="row">
                    <div class="col-xs-6 text-left" >
                        <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' %  to_text(o.company_id.logo) "
							style="max-height: 150px;" class="text-right"/>
                    </div>
                    <div class="col-xs-6 text-right">
                        <div t-attf-style="color:{{data['primary_color']}}!important;" t-field="o.company_id.partner_id"
							/>
                        <div t-field="o.company_id.partner_id" t-field-options='{"widget": "contact", "fields":
							["address", "phone"], "no_marker": true}'/></div>
                </div>
                <div class="row">
                    <t t-if="doc.company_id.watermark_selection == 'custom_name' and doc.company_id.add_watermark
						== True ">
                        <div style="position:absolute;opacity:0.11;z-index:1000;-webkit-transform:rotate(-45deg);width:100%;
							height:100%; top: 450px; ">
                            <p t-field="doc.company_id.custom_watermark_name" style="font-size:250px; "/>
                        </div>
                    </t>
                    <t t-if="doc.company_id.watermark_selection == 'company_logo' and doc.company_id.add_watermark
						== True ">
                        <div style="position:absolute;opacity:0.11;z-index:1000;-webkit-transform:rotate(-45deg);width:100%;
							height:100%; top: 400px;">
                            <img t-att-src="'data:image/png;base64,%s' %  to_text(doc.company_id.logo) " style="height:500px;"
								/>
                        </div>
                    </t>
                </div>
            </div>
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <div class="row">
                        <br/>
                        <br/>
                        <br/>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 text-left" >
                            <table>
                                <tr>
                                    <span t-attf-style=" color:{{data['primary_color']}}!important; width:50px; " class="text-center"
									>
                                        <i class="fa fa-map-marker" aria-hidden="true"/>
                                        <strong>Customer Address:</strong>
                                    </span>
                                </tr>
                                <tr>
                                    <div t-if="o.move_lines and o.move_lines[0].partner_id" name="partner_header">
                                        <div t-field="o.move_lines[0].partner_id" t-options='{"widget": "contact", "fields":
										["address", "phone"], "no_marker": True}'/></div>
                                    <div t-if="not (o.move_lines and o.move_lines[0].partner_id) and o.partner_id" name="partner_header">
                                        <div t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address",
										"phone"], "no_marker": True}'/></div>
                                </tr>
                            </table>
                        </div>
                        <div class="col-xs-6 text-right" >
                            <div t-attf-style=" border: 1px !important; border-color:{{data['primary_color']}}!important;
							border-style: groove !important; "/>
                            <table>
                                <tbody>
                                    <tr t-attf-style="color:{{data['primary_color']}}!important; " >
                                        <td colspan ="2" style="padding:10px;!important;">
                                            <span style="font:25px lucida-console,sans-serif !important;">
											    Delivery Note: <span t-field="o.name"/>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-if="o.origin" style="padding:10px;!important;">
										    Order (Origin) :
										    <br/>
                                            <span t-field="o.origin"/>
                                        </td>
                                        <td name="td_sched_date_h" style="padding:10px;!important;">
										    Date:
										    <br/>
                                            <t t-if="o.state == 'done'">
                                                <span t-field="o.date_done"/>
                                            </t>
                                            <t t-if="o.state != 'done'">
                                                <span t-field="o.scheduled_date"/>
                                            </t>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-xs-12">
                            <table t-if="not o.move_line_ids" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th t-attf-style=" border: none !important; background-color:{{data['primary_color']}}!important;
										color:{{data['sale_font_color']}}!important; " >
                                            <i class="fa fa-list-ol" aria-hidden="true"/> Item
									    </th>
                                        <th t-attf-style=" border: none !important; background-color:{{data['primary_color']}}!important;
										color:{{data['sale_font_color']}}!important;">
                                            <i class="fa fa-cart-arrow-down" aria-hidden="true"/> Product
                                        </th>
                                        <th t-attf-style="border: none !important;">
                                            <i class="fa fa-sort-amount-asc" aria-hidden="true"/> Ordered Quantity
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="k" t-value="1"/>
                                    <tr t-foreach="o.move_lines" t-as="move">
                                        <td>
                                            <span t-esc="k"/>
                                            <t t-set="k" t-value="k+1"/>
                                        </td>
                                        <td>
                                            <span t-field="move.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="move.product_qty"/>
                                            <span t-field="move.product_uom"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <t t-if="o.company_id.watermark_selection == 'company_logo'">
                        <div style="position:absolute;opacity:0.11;width:100%;text-align:center;z-index:1000;-webkit-transform:
						rotate(-45deg);">
                            <img t-att-src="'data:image/png;base64,%s' %  to_text(o.company_id.logo) " style="height:500px"/>
                        </div>
                    </t>
                    <t t-if="o.company_id.watermark_selection == 'custom_name'">
                        <div style="position:absolute;opacity:0.11;width:100%;text-align:center;z-index:1000;-webkit-transform:
						rotate(-45deg);">
                            <p t-field="o.company_id.custom_watermark_name" style="font-size:150px"/>
                        </div>
                    </t>
                    <div class="row">
                        <div class="col-xs-12">
                            <t t-set="backorder" t-value="False"/>
                            <table t-if="o.move_line_ids" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th t-attf-style=" border: none !important; background-color:{{data['primary_color']}}!important;
										color:{{data['sale_font_color']}}!important; " >
                                            <i class="fa fa-list-ol" aria-hidden="true"/> Item
                                        </th>
                                        <th t-attf-style=" border: none !important; background-color:{{data['primary_color']}}!important;
										color:{{data['sale_font_color']}}!important;">
                                            <strong>
                                                <i class="fa fa-cart-arrow-down" aria-hidden="true"/> Product
                                            </strong>
                                        </th>
                                        <t t-if="o.company_id.add_product_image">
                                            <th t-attf-style=" border: none !important; background-color:{{data['primary_color']}}!important;
											color:{{data['sale_font_color']}}!important; " class="text-center">
                                                <i class="fa fa-picture-o" aria-hidden="true"/> Product Image
                                            </th>
                                        </t>
                                        <th t-attf-style=" border: none !important; background-color:{{data['primary_color']}}!important;
										color:{{data['sale_font_color']}}!important; " class="text-right" t-if="has_serial_number">
                                            <span class="pull-left">Lot/Serial Number</span>
                                        </th>
                                        <th  t-attf-style=" border: none !important;  "  class="text-center">
                                            <i class="fa fa-sort-amount-asc" aria-hidden="true"/>
                                            <strong>Ordered Quantity</strong>
                                        </th>
                                        <th t-attf-style=" border: none !important; background-color:{{data['primary_color']}}!important;
										color:{{data['sale_font_color']}}!important; " t-if="any([pack_operation.state
										== 'done' for pack_operation in o.move_line_ids])" class="text-right">
                                            <i class="fa fa-sort-amount-asc" aria-hidden="true"/>
                                            <strong>Delivered Quantity</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="j" t-value="1"/>
                                    <t t-foreach="o.move_line_ids" t-as="pack_operation">
                                        <tr>
                                            <td class="active" >
                                                <span t-esc="j"/>
                                                <t t-set="j" t-value="j+1"/>
                                            </td>
                                            <td >
                                                <span t-field="pack_operation.product_id"/>
                                                <t t-if="not pack_operation.product_id and pack_operation.package_id">
                                                    <span  t-field="pack_operation.package_id"/>
                                                </t>
                                            </td>
                                            <t t-if="o.company_id.add_product_image">
                                                <td>
                                                    <span t-field="pack_operation.product_id.image" t-field-options='{"widget": "image"}'/>
                                                </td>
                                            </t>
                                            <t t-if="has_serial_number">
                                                <td t-if="pack_operation.pack_lot_ids">
                                                    <table class="table table-condensed" t-if="pack_operation.pack_lot_ids">
                                                        <tr t-foreach="pack_operation.pack_lot_ids" t-as="packlot">
                                                            <td>
                                                                <span t-field="packlot.lot_id"/>
                                                                <t t-if="not packlot.lot_id">
                                                                    <span t-field="packlot.lot_name"/>
                                                                </t>
                                                            </td>
                                                            <td name="lot_qty">
                                                                <span t-field="packlot.qty"/>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                                <td t-if="not pack_operation.pack_lot_ids"/>
                                            </t>
                                            <td class="text-center">
                                                <span t-if="pack_operation.package_id">:</span>
                                                <span t-field="pack_operation.package_id"/>
                                                <span t-field="pack_operation.product_qty"/>
                                                <span t-field="pack_operation.product_uom_id"/>
                                            </td>
                                            <td  class="text-right"
										t-if="pack_operation.state == 'done'">
                                                <t t-if="pack_operation.product_qty != pack_operation.qty_done">
                                                    <t t-set="backorder" t-value="True"/></t>
                                                <span t-field="pack_operation.qty_done"/>
                                                <span t-field="pack_operation.product_uom_id"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <table>
                                <tr>
                                    <td>
                                        <strong>Note:</strong>
                                        <br/>
                                        <div t-attf-style=" border: 1px !important; border-color:{{data['primary_color']}}!important;
										border-style: groove !important; "/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <p t-if="o.backorder_id">
										This shipment is a backorder of
                                            <t t-esc="o.backorder_id.name"/>.
                                        </p>
                                        <p>
                                            <t t-if="backorder">
											All items couldn't be shipped, the remaining ones will be shipped as soon as they
											become available.
										</t>
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 pull-right"  >
                            <t t-if="doc.company_id.add_signature == True">
                                <span>Signature :</span>
                                <span t-field="doc.company_id.signature_logo" t-field-options='{"widget": "image","style":"width:
								100px; height: 100px; margin-right: 10px; display:inline" }'/>
                            </t>
                        </div>
                    </div>
                    <div class="oe_structure"/></div>
            </t>
            <div class="footer">
                <div class="row" >
                    <div class="col-xs-12">
                        <table class="table" t-attf-style=" background-color:{{data['primary_color']}} !important;
							color:{{data['sale_font_color']}}!important; ">
                            <tr >
                                <td class="text-left"  >
                                    <div t-field="o.company_id.partner_id" t-field-options='{"widget": "contact", "fields":
										["address"], "no_marker": true}' style="display:inline-block;"/>
                                </td>
                                <td class="text-center"  >
                                    <cenetr>
										Page: 
                                        <span class="page"/>
										/ 
                                        <span class="topage"/>
                                    </cenetr>
                                </td>
                                <td class="text-right" >
                                    <t t-if="o.company_id.partner_id.phone">
										Phone: 
                                        <span t-field="o.company_id.phone"/>
                                        <br/>
                                    </t>
                                    <t t-if="o.company_id.partner_id.email">
										Email: 
                                        <span t-field=" o.company_id.email"/>
                                        <br/>
                                    </t>
                                    <t t-if="o.company_id.partner_id.website">
										Website: 
                                        <span t-field="o.company_id.website"/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                        <t t-if="o.company_id.report_footer">
                            <span t-raw="o.company_id.report_footer"/>
                        </t>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo> 