<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_trangthai_form" model="ir.ui.view">
        <field name="name">trangthai.form</field>
        <field name="model">trangthai</field>
        <field name="arch" type="xml">
            <form string="TrangThai">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_trangthai_tree" model="ir.ui.view">
        <field name="name">trangthai.tree</field>
        <field name="model">trangthai</field>
        <field name="arch" type="xml">
            <tree string="TrangThai">
                <field name="name"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <record id="action_trangthai" model="ir.actions.act_window">
        <field name="name">Trạng thái</field>
        <field name="res_model">trangthai</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_trangthai" name="Trạng thái" parent="project.menu_main_pm" action="action_trangthai" sequence="10"/>
</odoo>