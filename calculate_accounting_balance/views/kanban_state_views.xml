<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_kanban_state_form" model="ir.ui.view">
        <field name="name">kanban.state.form</field>
        <field name="model">kanban.state</field>
        <field name="arch" type="xml">
            <form string="Kanban State">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_kanban_state_tree" model="ir.ui.view">
        <field name="name">kanban.state.tree</field>
        <field name="model">kanban.state</field>
        <field name="arch" type="xml">
            <tree string="Kanban States">
                <field name="name"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <record id="action_kanban_states" model="ir.actions.act_window">
        <field name="name">Kanban States</field>
        <field name="res_model">kanban.state</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_kanban_states" name="Kanban States" parent="project.menu_main_pm" action="action_kanban_states" sequence="10"/>
</odoo>