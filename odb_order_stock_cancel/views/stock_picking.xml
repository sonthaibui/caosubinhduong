<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
     <record model="ir.ui.view" id="cancel_order_extended_for_picking_cft_all_in_one_cancel">
        <field name="name">stock.picking.extended</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
           <xpath expr="//button[@name='action_cancel']"  position="after">
              <button name="action_cancel" attrs="{'invisible':[('state','!=','done')]}" string="Cancel" groups="base.group_system" type="object" context="{'Flag':True}"/>
           </xpath>
        </field>
    </record>
</data>
</odoo>
