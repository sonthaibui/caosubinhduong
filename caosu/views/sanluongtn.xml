<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_rubbertest_form" model="ir.ui.view">
        <field name="name">rubbertest.form</field>
        <field name="model">rubber.test</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <sheet>
                  <group>
                    <group>
                      <field name="plantationtest_id"></field>
                      <field name="rubbertestbydate_id"/>
                      <field name="ngay"/>
                      <field name="lo"/>
                      <field name="kichthich"/>
                      <field name="ghichu"/>                      
                    </group>
                    <group>                    
                      <field name="mu_up" string="Mũ úp"/>
                      <field name="do_up" string="Độ úp"/>
                      <field name="mu_ngua" string="Mũ ngửa"/>
                      <field name="do_ngua" string="Độ ngửa"/>
                      <field name="mu_bo" string="Mũ bợ"/>
                      <field name="do_bo" string="Độ bợ"/>
                    </group>
                  </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_rubbertest_tree" model="ir.ui.view">
        <field name="name">rubbertest.tree</field>
        <field name="model">rubber.test</field>
        <field name="arch" type="xml">
          <tree string="Rubber Test Tree View" create="0" multi_edit="1" default_order="ngay desc" decoration-bf="kichthich == True" decoration-warning="(miengcao =='2 miệng') or (miengcao =='Miệng ngửa cũ')" decoration-primary="miengcao =='Miệng ngửa mới'">
            <field name="id" optional="hide"/>
            <field name="plantestname" optional="show"/>
            <field name="ngay"/>
            <field name="lo" optional="hide"/>
            <field name="rubbertestbydate_id" widget="open_tab" optional="hide"/>                                            
            <field name="mu_up" />
            <field name="mulantruoc_up" optional="show"/>
            <field name="do_up" />
            <field name="quykho_up" optional="hide"/>
            <field name="chenhlechkho_up" decoration-success="chenhlechkho_up_state == True" decoration-danger="chenhlechkho_up_state == False"  widget="percentage" optional="hide"/>
            <field name="chenhlechkho_up_state" optional="hide"/>
            <field name="kt_daoup" optional="hide"/>
            <field name="ctktup" optional="show"/>
            <field name="dao_kt_up" optional="show"/>
            <field name="lan_kt_up" optional="show"/>
            <field name="mu_ngua" optional="show"/>
            <field name="mulantruoc_ngua" optional="show"/>
            <field name="do_ngua" optional="show"/>
            <field name="ctktngua" optional="show"/>
            <field name="quykho_ngua" optional="hide"/>
            <field name="chenhlechkho_ngua" decoration-success="chenhlechkho_ngua_state == True" decoration-danger="chenhlechkho_ngua_state == False" optional="hide"/>
            <field name="chenhlechkho_ngua_state" optional="hide"/>
            <field name="dao_kt_ngua" optional="hide"/>
            <field name="lan_kt_ngua" optional="hide"/>
            <field name="kt_daongua" optional="hide"/>
            <field name="mu_bo" optional="hide"/>
            <field name="do_bo" optional="hide" />
            <field name="kichthich" optional="hide"/>
            <field name="kichthichngua" optional="hide"/>
            <field name="congthuc_kt" optional="hide"/>
            <field name="miengcao" optional="hide"/>
            <field name="thoitiet" optional="show"/>
            <field name="ghichu" optional="show"/>
          </tree>
        </field>
    </record>
    <record id="view_rubbertest_pivot" model="ir.ui.view">
        <field name="name">rubbertest.pivot</field>
        <field name="model">rubber.test</field>
        <field name="arch" type="xml">
            <pivot string="Sản lượng mũ thí nghiệm" sample="1">
              <field name="ngay" type="row"/>
              <field name="mu_up" type="measure" string="Úp"/>
              <field name="mu_ngua" type="measure" string="Ngửa"/>
              <field name="plantestname" type="col"/>
            </pivot>
        </field>
    </record>
    <record id="rubber_view_search" model="ir.ui.view">
      <field name="name">rubbertest.view.search</field>
      <field name="model">rubber.test</field>
      <field name="arch" type="xml">
        <search>
          <field name="ngay" />
          <group expand="0" string="Group By">
            <filter name="to" string="Tổ" context="{'group_by': 'to'}" />
            <filter name="lo" string="Lô" context="{'group_by': 'lo'}" />
            <filter name="cay" string="Cây" context="{'group_by': 'plantestname'}" />
            <filter name="kt_daoup" string="Dao up" context="{'group_by': 'kt_daoup'}" /> 
            <filter name="2024" string="2024" domain="[('ngay','&lt;=',time.strftime('2025-01-31')),('ngay','&gt;=',time.strftime('2024-02-01'))]"/>
            <filter name="2025" string="2025" domain="[('ngay','&lt;=',time.strftime('2026-01-31')),('ngay','&gt;=',time.strftime('2025-02-01'))]"/>            
          </group>
        </search>
      </field>
    </record>
    <record id="action_sanluongtn" model="ir.actions.act_window">
        <field name="name">Sản Lượng TN</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rubber.test</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="context">{"search_default_to":1, "search_default_lo":1, "search_default_cay":1,}</field>
        <field name="help" type="html">
            <p>
                Sản lượng công nhân cạo thí nghiệm.
            </p>
        </field>
    </record>

</odoo>
