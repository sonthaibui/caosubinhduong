                <field name="dott" attrs="{'readonly': [('state','=','nhan')]}"/>
                <field name="quykhott"/>
                <button name="nhanmu" string="NHẬN" type="object" class="btn-success"  attrs="{'invisible': [('state','in',['nhan','mua'])]}"/>
