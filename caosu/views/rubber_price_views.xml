<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="rubber_price_tree" model="ir.ui.view">
            <field name="name">rubber.price.tree</field>
            <field name="model">rubber.price</field>
            <field name="arch" type="xml">
                <tree string="Giá Mủ Cao Su">
                     
                    <header>
                        <button name="%(action_rubber_price_wizard)d" 
                                string="Cập nhật nhiều giá mủ" 
                                type="action" 
                                class="btn-primary"/>
                    </header>
                    
                    <field name="ngay_hieuluc"/>
                    <field name="to" widget="many2many_tags"/>
                    <field name="daily"/>
                    <field name="mu"/>
                    <field name="gia" sum="Tổng"/>
                    <field name="macdinh"/>
                </tree>
            </field>
        </record>
        
        
        <record id="rubber_price_form" model="ir.ui.view">
            <field name="name">rubber.price.form</field>
            <field name="model">rubber.price</field>
            <field name="arch" type="xml">
                <form string="Giá Mủ Cao Su">
                    <header>
                        <button name="action_open_price_wizard" 
                                string="Cập nhật nhiều giá mủ" 
                                type="object" 
                                class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="to"/>
                                <field name="daily"/>
                                <field name="mu"/>
                                <field name="gia"/>
                            </group>
                            <group>
                                <field name="ngay_hieuluc"/>
                                <field name="macdinh"/>
                            </group>
                        </group>
                        <group>
                            <field name="ghi_chu" placeholder="Ghi chú về thay đổi giá..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
       
        <record id="rubber_price_search" model="ir.ui.view">
            <field name="name">rubber.price.search</field>
            <field name="model">rubber.price</field>
            <field name="arch" type="xml">
                <search>
                    <field name="daily"/>
                    <field name="to"/>
                    <field name="gia"/>
                    <field name="ngay_hieuluc"/>
                    <separator/>
                    <filter string="Mũ Nước" name="nuoc" domain="[('mu', '=', 'nuoc')]"/>
                    <filter string="Mũ Dây" name="day" domain="[('mu', '=', 'day')]"/>
                    <filter string="Mũ Tạp" name="tap" domain="[('mu', '=', 'tap')]"/>
                    <filter string="Mũ Đông" name="dong" domain="[('mu', '=', 'dong')]"/>
                    <filter string="Mặc Định" name="macdinh" domain="[('macdinh', '=', True)]"/>
                    <separator/>
                    <filter string="Đại Lý" name="group_by_daily" context="{'group_by': 'daily'}"/>
                    <filter string="Tổ" name="group_by_to" context="{'group_by': 'to'}"/>
                    <filter string="Loại Mũ" name="group_by_mu" context="{'group_by': 'mu'}"/>
                    <filter string="Ngày Hiệu Lực" name="group_by_ngay" context="{'group_by': 'ngay_hieuluc'}"/>
                </search>
            </field>
        </record>
        
        
        <record id="action_rubber_price" model="ir.actions.act_window">
            <field name="name">Lịch Sử Giá Mủ</field>
            <field name="res_model">rubber.price</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_mu': 1}</field>
        </record>
        
        
        <menuitem id="menu_rubber_price"
                  name="Lịch Sử Giá Mủ"
                  parent="sanluong_menu"
                  action="action_rubber_price"
                  sequence="3"/>
    </data>
</odoo>