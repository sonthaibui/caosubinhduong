    </record>
    <!-- Search view for allowance -->
    <record id="view_allowance_search" model="ir.ui.view">
        <field name="name">allowance.search</field>
        <field name="model">allowance</field>
        <field name="arch" type="xml">
        <search string="Allowance Search">
            <filter string="Group by Year"
                    name="group_by_nam"
                    context="{'group_by':'nam'}"/>
            <filter string="Group by Month"
                    name="group_by_thang"
                    context="{'group_by':'thang'}"/>
            <filter string="Group by Tổ"
                    name="group_by_to"
                    context="{'group_by':'allowancebymonth_id'}"/>
        </search>
        </field>
    </record>

    <!-- (Optional) Search view for allowance.by.month -->
    <record id="view_allowance_by_month_search" model="ir.ui.view">
        <field name="name">allowancebymonth.search</field>
        <field name="model">allowance.by.month</field>
        <field name="arch" type="xml">
        <search string="Allowance By Month Search">
            <filter string="Group by Year"
                    name="group_by_nam"
                    context="{'group_by':'nam'}"/>
            <filter string="Group by Month"
                    name="group_by_thang"
                    context="{'group_by':'thang'}"/>
        </search>
        </field>
    </record>
    <record id="action_phucap" model="ir.actions.act_window">
        <field name="name">Phụ Cấp</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">allowance</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{ 
            'search_default_group_by_nam': 1,
            'search_default_group_by_thang': 1,
            'search_default_group_by_to': 1
        }</field>
        <field name="help" type="html">
            <p>Phụ Cấp.</p>
        </field>
    </record>
  
    <record id="action_phucapthang" model="ir.actions.act_window">
        <field name="name">Phụ Cấp Tháng</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">allowance.by.month</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{ 
            'search_default_group_by_nam': 1,
            'search_default_group_by_thang': 1 
        }</field>
        <field name="help" type="html">
            <p>
              Phụ Cấp Tháng.
            </p>
        </field>
    </record>

  
</odoo>
