<odoo>
    <data noupdate="1">
        <record id="update_color_action" model="ir.actions.server">
            <field name="name">Update Color for MyModel</field>
            <field name="model_id" ref="model_rubber.test"/>
            <field name="state">code</field>
            <field name="code">
                action = env['rubber.test'].search([]).write({'color': 'green'})
            </field>
        </record>
        <record id="execute_update_color_action" model="base.automation">
            <field name="name">Execute Update Color Action</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="state">code</field>
            <field name="code">
                env.ref('caosu.update_color_action').run()
            </field>
        </record>
    </data>
</odoo>