<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_rubber_salary" model="report.paperformat">
      <field name="name">A4 Portrait</field>
      <field name="format">A4</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">10</field>
      <field name="margin_bottom">2</field>
      <field name="margin_left">10</field>
      <field name="margin_right">10</field>
      <field name="header_line" eval="False" />
      <field name="header_spacing">20</field>
      <field name="dpi">90</field>
    </record>   

    <record id="action_rubber_salary_report" model="ir.actions.report">
      <field name="name">In Phiếu Lương</field>
      <field name="model">rubber.salary</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">caosu.rubber_salary_template</field>
      <field name="binding_model_id" ref="model_rubber_salary" />
      <field name="binding_type">report</field>
      <field name="paperformat_id" ref="paperformat_rubber_salary" />
    </record>
    
    <template id="rubber_salary_template">
      <t t-call="web.html_container">
        <t t-call="web.internal_layout">
          <div class="page" style="font-family:arial; font-size: 14.9px;">
            <!-- Report header content -->
            <t t-foreach="docs" t-as="o">
              <p style="page-break-before:always;"> </p>
                <div class="row">
                <table width="100%" style="border-collapse: collapse;">
                  <tr>
                    <td width="50%" style="vertical-align: top;">
                      <span style="font-size: 26px; font-weight: 500; font-family: Arial;">Phiếu lương tháng </span>
                      <span style="font-size: 26px; font-weight: bold; font-family: Arial;" t-field="o.thang" />
                      <span style="font-size: 26px; font-weight: 500; font-family: Arial;"> năm </span>
                      <span style="font-size: 26px; font-weight: 500; font-family: Arial;" t-field="o.nam" />
                    </td>
                    <td width="25%" style="vertical-align: top; text-align: center;">
                      <span style="font-size: 26px; font-weight: 500; font-family: Arial;">CN: </span>
                      <span style="font-size: 26px; font-weight: bold; font-family: Arial;" t-field="o.sttcn" />
                      <span style="font-size: 26px; font-weight: bold; font-family: Arial;" t-field="o.empname" />
                    </td>
                    <td width="25%" style="vertical-align: top; text-align: right;">
                      <span style="font-size: 26px; font-weight: 500; font-family: Arial;">Tổ: </span>
                      <span style="font-size: 26px; font-weight: bold; font-family: Arial;" t-esc="o.to_name1" />
                    </td>
                  </tr>
                </table>
                </div>
              <br></br>
              <div class="row">
                <table width="100%" style="border-collapse: collapse;">
                  <thead>
                    <tr style="text-align: center;">
                      <th style="border: 1px solid black; padding-left: 12px; padding-right: 12px;">Ngày</th>
                      <th style="border: 1px solid black; padding-left: 2px; padding-right: 2px;">Lô</th>
                      <th style="border: 1px solid black; padding-left: 7px; padding-right: 7px;">Mũ</th>
                      <th style="border: 1px solid black; padding-left: 7px; padding-right: 7px;">Độ</th>
                      <th style="border: 1px solid black;">Quy khô</th>
                      <th style="border: 1px solid black;">ĐG nước</th>
                      <th style="border: 1px solid black; text-align: right; padding-right: 10px;">Tiền nước</th>
                      <th t-if="o.tientangdg != 0" style="border: 1px solid black;">ĐG tăng</th>
                      <th t-if="o.tientangdg != 0" style="border: 1px solid black; text-align: right; padding-right: 10px;">Tiền tăng</th>
                      <th t-if="o.tienday != 0" style="border: 1px solid black;">Dây</th>
                      <th t-if="o.tienday != 0" style="border: 1px solid black;">Giá dây</th>
                      <th t-if="o.tienday != 0" style="border: 1px solid black; text-align: right; padding-right: 10px;">Tiền dây</th>
                      <th t-if="o.tiendong != 0" style="border: 1px solid black;">Đông</th>
                      <th t-if="o.tiendong != 0" style="border: 1px solid black;">Giá đông</th>
                      <th t-if="o.tiendong != 0" style="border: 1px solid black; text-align: right; padding-right: 10px;">Tiền đông</th>
                      <th t-if="o.tienchen != 0" style="border: 1px solid black;">Chén</th>
                      <th t-if="o.tienchen != 0" style="border: 1px solid black;">Giá chén</th>
                      <th t-if="o.tienchen != 0" style="border: 1px solid black; text-align: right; padding-right: 10px;">Tiền chén</th>
                      <th t-if="o.phucap1 != 0" style="border: 1px solid black; text-align: right; padding-right: 10px;">Phụ cấp</th>
                      <th style="border: 1px solid black; text-align: right; padding-right: 10px;">Tổng tiền</th>
                    </tr>
                  </thead>
                  <tbody>
                    <t t-foreach="o.rubber_line_ids.filtered(lambda line: line.tongtien != 0).sorted(key=lambda record: record.ngay, reverse=False)" t-as="line">
                      <tr t-att-style="'text-align: center;' + (' font-weight: bold;' if line.kichthich else '')">
                        <td style="border: 1px solid black;">
                          <span t-field="line.ngay"/>
                        </td>
                        <td style="border: 1px solid black;">
                          <span t-field="line.lo"/>
                        </td>
                        <td style="border: 1px solid black;">
                          <span t-if="line.cong != 0" t-field="line.cong"/><span t-if="line.cong == 0">-</span>
                        </td>
                        <td style="border: 1px solid black;">
                          <span t-if="line.do_phancay != 0" t-esc="'%.1f'% line.do_phancay"/><span t-if="line.do_phancay == 0">-</span>
                        </td>
                        <td style="border: 1px solid black;">
                          <span t-if="line.quykho_drc != 0" t-esc="'%.1f'% line.quykho_drc"/><span t-if="line.quykho_drc == 0">-</span>
                        </td>
                        <td style="border: 1px solid black; text-align: center;">
                          <span t-if="line.dongia_nuoc != 0" t-field="line.dongia_nuoc"/><span t-if="line.dongia_nuoc == 0">-</span>
                        </td>
                        <td style="border: 1px solid black; text-align: right; padding-right: 10px;">
                          <span t-if="line.tiennuoc != 0" t-field="line.tiennuoc"/><span t-if="line.tiennuoc == 0">-</span>
                        </td>
                        <td t-if="o.tientangdg != 0" style="border: 1px solid black;">
                          <span t-if="line.dongia_tang != 0" t-field="line.dongia_tang"/><span t-if="line.dongia_tang == 0">-</span>
                        </td>
                        <td t-if="o.tientangdg != 0" style="border: 1px solid black; text-align: right; padding-right: 10px;">
                          <span t-if="line.tientangdg != 0" t-field="line.tientangdg"/><span t-if="line.tientangdg == 0">-</span>
                        </td>
                        <td t-if="o.tienday != 0" style="border: 1px solid black;">
                          <span t-if="line.muday != 0" t-esc="'%.1f'% line.muday"/><span t-if="line.muday == 0">-</span>
                        </td>
                        <td t-if="o.tienday != 0" style="border: 1px solid black;">
                          <span t-if="line.dongia_day != 0" t-field="line.dongia_day"/><span t-if="line.dongia_day == 0">-</span>
                        </td>
                        <td t-if="o.tienday != 0" style="border: 1px solid black; text-align: right; padding-right: 10px;">
                          <span t-if="line.tienday != 0" t-field="line.tienday"/><span t-if="line.tienday == 0">-</span>
                        </td>
                        <td t-if="o.tiendong != 0" style="border: 1px solid black; text-align: right; padding-right: 10px;">
                          <span t-if="line.mudong != 0" t-esc="'%.1f'% line.mudong"/><span t-if="line.mudong == 0">-</span>
                        </td>
                        <td t-if="o.tiendong != 0" style="border: 1px solid black;">
                          <span t-if="line.dongia_dong != 0" t-field="line.dongia_dong"/><span t-if="line.dongia_dong == 0">-</span>
                        </td>
                        <td t-if="o.tiendong != 0" style="border: 1px solid black;">
                          <span t-if="line.tiendong != 0" t-field="line.tiendong"/><span t-if="line.tiendong == 0">-</span>
                        </td>
                        <td t-if="o.tienchen != 0" style="border: 1px solid black;">
                          <span t-if="line.muchen != 0" t-esc="'%.1f'% line.muchen"/><span t-if="line.muchen == 0">-</span>
                        </td>
                        <td t-if="o.tienchen != 0" style="border: 1px solid black;">
                          <span t-if="line.dongia_chen != 0" t-field="line.dongia_chen"/><span t-if="line.dongia_chen == 0">-</span>
                        </td>
                        <td t-if="o.tienchen != 0" style="border: 1px solid black; text-align: right; padding-right: 10px;">
                          <span t-if="line.tienchen != 0" t-field="line.tienchen"/><span t-if="line.tienchen == 0">-</span>
                        </td>
                        <td t-if="o.phucap1 != 0" style="border: 1px solid black; text-align: right; padding-right: 10px;">
                          <span t-if="line.phucap != 0" t-field="line.phucap"/><span t-if="line.phucap == 0">-</span>
                        </td>
                        <td style="border: 1px solid black; text-align: right; padding-right: 10px;">
                          <span t-if="line.tongtien != 0" t-field="line.tongtien"/><span t-if="line.tongtien == 0">-</span>
                        </td>
                      </tr>
                    </t>

                    <!-- Sum Row -->
                    <tr>
                      <td style="border: 1px solid black; text-align: center; font-weight: bold;">
                        <span t-field="o.ngaycao"/> ngày
                      </td>
                      <td style="border: 1px solid black;"></td>
                      <td style="border: 1px solid black;"></td>
                      <td style="border: 1px solid black;"></td>
                      <td style="border: 1px solid black; text-align: center; font-weight: bold;">
                        <span t-field="o.quykho_drc"/>
                      </td>
                      <td style="border: 1px solid black;"></td>
                      <td style="border: 1px solid black; text-align: right; padding-right: 10px; font-weight: bold;">
                        <span t-field="o.tiennuoc"/>
                      </td>
                      <td t-if="o.tientangdg > 0" style="border: 1px solid black;"></td>
                      <td t-if="o.tientangdg > 0" style="border: 1px solid black; text-align: right; padding-right: 10px; font-weight: bold;">
                        <span t-field="o.tientangdg"/>
                      </td>
                      <td t-if="o.tienday > 0" style="border: 1px solid black;"></td>
                      <td t-if="o.tienday > 0" style="border: 1px solid black;"></td>
                      <td t-if="o.tienday > 0" style="border: 1px solid black; text-align: right; padding-right: 10px; font-weight: bold;">
                        <span t-field="o.tienday"/>
                      </td>
                      <td t-if="o.tiendong > 0" style="border: 1px solid black;"></td>
                      <td t-if="o.tiendong > 0" style="border: 1px solid black;"></td>
                      <td t-if="o.tiendong > 0" style="border: 1px solid black; text-align: right; padding-right: 10px; font-weight: bold;">
                        <span t-field="o.tiendong"/>
                      </td>
                      <td t-if="o.tienchen > 0" style="border: 1px solid black;"></td>
                      <td t-if="o.tienchen > 0" style="border: 1px solid black;"></td>
                      <td t-if="o.tienchen > 0" style="border: 1px solid black; text-align: right; padding-right: 10px; font-weight: bold;">
                        <span t-field="o.tienchen"/>
                      </td>
                      <td t-if="o.phucap1 > 0" style="border: 1px solid black; text-align: right; padding-right: 10px; font-weight: bold;">
                        <span t-field="o.phucap1"/>
                      </td>
                      <td style="border: 1px solid black; text-align: right; padding-right: 10px; font-weight: bold;">
                        <span t-field="o.tongtien"/>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div style="height: 40px;"></div>
              <table width="100%" style="border-collapse: collapse;">
                <tr>
                  <td width="50%" style="vertical-align: top; padding-right: 20px;">
                    <table width="100%">
                    <tr>
                      <td width="60%">Số phần</td>
                      <td style="text-align: right;"><span t-esc="'%.1f'% o.sophan"/></td>
                    </tr>
                    <tr>
                      <td>Quy khô 1 phần</td>
                      <td style="text-align: right;"><span t-esc="'%.1f' % o.quykho1"/></td>
                    </tr>
                    <tr>
                      <td>Số ngày vắng</td>
                      <td style="text-align: right;"><span t-field="o.ngaylam"/></td>
                    </tr>
                    <tr>
                      <td style="font-weight: bold;">Lương năm ngoái</td>
                      <td style="font-weight: bold; text-align: right;">
                        <span t-if="hasattr(o, 'luong_nam_ngoai') and o.luong_nam_ngoai != False" t-field="o.luong_nam_ngoai"/>
                        <span t-if="not hasattr(o, 'luong_nam_ngoai') or o.luong_nam_ngoai == False">-</span>
                      </td>
                    </tr>
                    <tr>
                      <td style="font-weight: bold;">Lương sản phẩm</td>
                      <td style="font-weight: bold; text-align: right;"><span t-field="o.tongtien" /></td>
                    </tr>
                    <tr t-if="o.boithuoc != 0">
                      <td>Bôi thuốc</td>
                      <td style="text-align: right;"><span t-field="o.boithuoc"/></td>
                    </tr>
                    <tr t-if="o.boikeo != 0">
                      <td>Bôi keo</td>
                      <td style="text-align: right;"><span t-field="o.boikeo"/></td>
                    </tr>
                    <tr t-if="o.giacomang != 0">
                      <td>Gia cố máng</td>
                      <td style="text-align: right;"><span t-field="o.giacomang"/></td>
                    </tr>
                    <tr t-if="o.chuyencan != 0">
                      <td>Chuyên cần</td>
                      <td style="text-align: right;"><span t-field="o.chuyencan"/></td>
                    </tr>
                    <tr t-if="o.thuongsl != 0">
                      <td>Thưởng sản lượng</td>
                      <td style="text-align: right;"><span t-field="o.thuongsl"/></td>
                    </tr>
                    <tr t-if="o.caochoang != 0">
                      <td>Cạo choàng</td>
                      <td style="text-align: right;"><span t-field="o.caochoang"/></td>
                    </tr>
                    <tr t-if="o.itmu != 0">
                      <td>Ít mũ</td>
                      <td style="text-align: right;"><span t-field="o.itmu"/></td>
                    </tr>
                    <tr t-if="o.duongxau != 0">
                      <td>Đường xấu</td>
                      <td style="text-align: right;"><span t-field="o.duongxau"/></td>
                    </tr>
                    <tr t-if="o.tienphan != 0">
                      <td>Tiền phân</td>
                      <td style="text-align: right;"><span t-field="o.tienphan"/></td>
                    </tr>
                    <tr t-if="o.mmcn != 0">
                      <td>Mở miệng cạo ngửa</td>
