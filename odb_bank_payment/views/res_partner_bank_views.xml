<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_bank_tree_view_inherit" model="ir.ui.view">
            <field name="name">res.partner.bank.tree.view.inherit</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_tree"/>
            <field name="arch" type="xml">
                <field name="bank_name" position="after">
                    <field name="image_icon"/>
                </field>
            </field>
        </record>
        <record id="res_partner_bank_form_view_inherit" model="ir.ui.view">
            <field name="name">res.partner.bank.form.view.inherit</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field name="arch" type="xml">
                <widget name="web_ribbon" position="after">
                    <field name="image_icon" widget="image" class="oe_avatar"/>
                </widget>
            </field>
        </record>
    </data>
</odoo>
