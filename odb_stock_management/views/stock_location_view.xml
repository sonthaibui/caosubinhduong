<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_location_search_view_inherit" model="ir.ui.view">
        <field name="name">stock.location.search.view.inherit</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_search"/>
        <field name="arch" type="xml">
           <xpath expr="//search" position="inside">
                <searchpanel>
                    <field name="usage" select="multi" icon="fa-tags" enable_counters="1"/>
                    <field name="location_id" icon="fa-tags" enable_counters="1"/>
                </searchpanel>
            </xpath>
        </field>
    </record>

</odoo>
